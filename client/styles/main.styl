@import 'yeticss'

header
  padding-top: 50px

.label
  height: 40px

  .label-color
    width: 24px
    height: 24px
    border: 1px solid grey
    border-radius: 20px
    display: inline-block

  > span
    margin-left: 10px
    margin-right: 10px

.container
  margin-top: 30px

.row
  border-left: 1px solid blue
  border-bottom: 1px solid blue
  width: 100%
  height: 100%

  &.opened 
    background: red

.row:first-child
  border-top: 1px solid blue

.column
  display: flex
  flex-direction: column
  width: 100%
  height: 100%

.column:last-child .row
  border-right: 1px solid blue

.container
  display: flex
  width: 500px
  height: 500px
